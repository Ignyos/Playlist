<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--
      Design tokens + base component styles for Playlist (WPF).
      Aligned with https://styles.ignyos.com (dark theme, warm accent).
      Keep in /styles for review; will merge to App.xaml once approved.
    -->

    <!-- ========================================================= -->
    <!-- Color Tokens (from https://styles.ignyos.com/web/tokens.css) -->
    <!-- Dark theme - matches Ignyos web design system             -->
    <!-- ========================================================= -->
    <!-- Accent: Warm orange/burnt sienna -->
    <Color x:Key="Color.Accent.Primary">#FFC18B5A</Color>
    <Color x:Key="Color.Accent.Strong">#FFFF9B6B</Color>
    
    <!-- Flame palette (secondary emphasis, charts) -->
    <Color x:Key="Color.Flame.1">#FFFF9B6B</Color>
    <Color x:Key="Color.Flame.2">#FFFF7E5E</Color>
    <Color x:Key="Color.Flame.3">#FFFFB85E</Color>
    <Color x:Key="Color.Flame.4">#FFFF8D7A</Color>
    <Color x:Key="Color.Flame.5">#FFFFA97A</Color>

    <!-- Neutral: Dark theme grays -->
    <Color x:Key="Color.Neutral.BG">#FF0A0A0A</Color>
    <Color x:Key="Color.Neutral.Surface">#FF0F0F0F</Color>
    <Color x:Key="Color.Neutral.Border">#FF1A1A1A</Color>
    <Color x:Key="Color.Neutral.Border.Strong">#FF2A2A2A</Color>
    <Color x:Key="Color.Neutral.Text">#FFE0E0E0</Color>
    <Color x:Key="Color.Neutral.Text.Strong">#FFFFFFFF</Color>
    <Color x:Key="Color.Neutral.Text.Muted">#FFB0B0B0</Color>
    <Color x:Key="Color.Neutral.Text.Subtle">#FF909090</Color>

    <!-- Semantic states -->
    <Color x:Key="Color.Success">#FF22C55E</Color>
    <Color x:Key="Color.Warning">#FFF59E0B</Color>
    <Color x:Key="Color.Danger">#FFEF4444</Color>
    <Color x:Key="Color.Info">#FF3B82F6</Color>
    
    <!-- Surface / Overlay -->
    <Color x:Key="Color.Surface.Pill">#FF0A0A0A</Color>
    <Color x:Key="Color.Surface.Pill.Hover">#FF1A1F1F</Color>
    <Color x:Key="Color.Surface.Overlay">#BF000000</Color>
    
    <!-- Shadow -->
    <Color x:Key="Color.Shadow">#FF000000</Color>

    <!-- ========================================================= -->
    <!-- Brush Aliases (for semantic naming)                       -->
    <!-- ========================================================= -->
    <SolidColorBrush x:Key="Brush.Accent.Primary" Color="{StaticResource Color.Accent.Primary}"/>
    <SolidColorBrush x:Key="Brush.Accent.Strong" Color="{StaticResource Color.Accent.Strong}"/>
    <SolidColorBrush x:Key="Brush.Accent.Hover" Color="{StaticResource Color.Flame.2}"/>
    
    <SolidColorBrush x:Key="Brush.Neutral.BG" Color="{StaticResource Color.Neutral.BG}"/>
    <SolidColorBrush x:Key="Brush.Neutral.Surface" Color="{StaticResource Color.Neutral.Surface}"/>
    <SolidColorBrush x:Key="Brush.Neutral.Border" Color="{StaticResource Color.Neutral.Border}"/>
    <SolidColorBrush x:Key="Brush.Neutral.Border.Strong" Color="{StaticResource Color.Neutral.Border.Strong}"/>
    <SolidColorBrush x:Key="Brush.Neutral.Text" Color="{StaticResource Color.Neutral.Text}"/>
    <SolidColorBrush x:Key="Brush.Neutral.Text.Strong" Color="{StaticResource Color.Neutral.Text.Strong}"/>
    <SolidColorBrush x:Key="Brush.Neutral.Text.Muted" Color="{StaticResource Color.Neutral.Text.Muted}"/>
    <SolidColorBrush x:Key="Brush.Neutral.Text.Subtle" Color="{StaticResource Color.Neutral.Text.Subtle}"/>
    
    <SolidColorBrush x:Key="Brush.Success" Color="{StaticResource Color.Success}"/>
    <SolidColorBrush x:Key="Brush.Warning" Color="{StaticResource Color.Warning}"/>
    <SolidColorBrush x:Key="Brush.Danger" Color="{StaticResource Color.Danger}"/>
    <SolidColorBrush x:Key="Brush.Info" Color="{StaticResource Color.Info}"/>
    
    <SolidColorBrush x:Key="Brush.Surface.Pill" Color="{StaticResource Color.Surface.Pill}"/>
    <SolidColorBrush x:Key="Brush.Surface.Pill.Hover" Color="{StaticResource Color.Surface.Pill.Hover}"/>
    <SolidColorBrush x:Key="Brush.Surface.Overlay" Color="{StaticResource Color.Surface.Overlay}"/>
    <SolidColorBrush x:Key="Brush.Divider" Color="{StaticResource Color.Neutral.Border}"/>
    <SolidColorBrush x:Key="Brush.Shadow" Color="{StaticResource Color.Shadow}"/>

    <!-- ========================================================= -->
    <!-- Typography Tokens (from web tokens.css)                   -->
    <!-- ========================================================= -->
    <FontFamily x:Key="Font.Primary">Segoe UI, -apple-system, BlinkMacSystemFont, Roboto, Oxygen, Ubuntu, Cantarell, sans-serif</FontFamily>
    <FontFamily x:Key="Font.Mono">Cascadia Mono, Courier New, monospace</FontFamily>

    <!-- Font sizes (converted from rem to pt) -->
    <x:Double x:Key="FontSize.Display">30</x:Double>
    <x:Double x:Key="FontSize.Heading">18</x:Double>
    <x:Double x:Key="FontSize.SubHeading">14</x:Double>
    <x:Double x:Key="FontSize.Body">13</x:Double>
    <x:Double x:Key="FontSize.Body.Small">12</x:Double>

    <FontWeight x:Key="FontWeight.Light">Light</FontWeight>
    <FontWeight x:Key="FontWeight.Regular">Normal</FontWeight>
    <FontWeight x:Key="FontWeight.SemiBold">SemiBold</FontWeight>
    
    <x:Double x:Key="LineHeight.Base">1.6</x:Double>
    <x:Double x:Key="LineHeight.Lead">1.7</x:Double>

    <!-- ========================================================= -->
    <!-- Spacing / Radius / Shadows (from web tokens.css)           -->
    <!-- ========================================================= -->
    <Thickness x:Key="Space.2XS">8</Thickness>
    <Thickness x:Key="Space.XS">16</Thickness>
    <Thickness x:Key="Space.SM">24</Thickness>
    <Thickness x:Key="Space.MD">40</Thickness>
    <Thickness x:Key="Space.LG">48</Thickness>
    <Thickness x:Key="Space.XL">64</Thickness>

    <CornerRadius x:Key="Radius.MD">8</CornerRadius>
    <CornerRadius x:Key="Radius.LG">16</CornerRadius>

    <DropShadowEffect x:Key="Shadow.LG"
                      Color="{StaticResource Color.Shadow}"
                      BlurRadius="40"
                      ShadowDepth="4"
                      Direction="270"
                      Opacity="1"/>
    
    <Duration x:Key="Duration.Fast">0:0:0.2</Duration>

    <!-- ========================================================= -->
    <!-- Base Text Styles                                          -->
    <!-- ========================================================= -->
    <Style x:Key="Text.Display" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize.Display}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Neutral.Text.Strong}"/>
        <Setter Property="LineHeight" Value="{StaticResource LineHeight.Base}"/>
    </Style>

    <Style x:Key="Text.Heading" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize.Heading}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Neutral.Text.Strong}"/>
        <Setter Property="LineHeight" Value="{StaticResource LineHeight.Base}"/>
    </Style>

    <Style x:Key="Text.SubHeading" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize.SubHeading}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Neutral.Text}"/>
        <Setter Property="LineHeight" Value="{StaticResource LineHeight.Lead}"/>
    </Style>

    <Style x:Key="Text.Body" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Neutral.Text}"/>
        <Setter Property="LineHeight" Value="{StaticResource LineHeight.Lead}"/>
    </Style>

    <Style x:Key="Text.Body.Small" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body.Small}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Neutral.Text.Muted}"/>
    </Style>

    <Style x:Key="Text.Muted" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Neutral.Text.Muted}"/>
    </Style>

    <!-- ========================================================= -->
    <!-- Button Styles (accent-based primary, border secondary)    -->
    <!-- ========================================================= -->
    <Style x:Key="Button.Base" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource Font.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body}"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Neutral.Border}"/>
        <Setter Property="Background" Value="{StaticResource Brush.Neutral.Surface}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Neutral.Text}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource Radius.MD}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource Brush.Surface.Pill.Hover}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource Brush.Neutral.Border.Strong}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource Brush.Neutral.Border.Strong}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Root" Property="Opacity" Value="0.4"/>
                            <Setter Property="Cursor" Value="Arrow"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Button.Primary" TargetType="Button" BasedOn="{StaticResource Button.Base}">
        <Setter Property="Background" Value="{StaticResource Brush.Accent.Primary}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Neutral.Text.Strong}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent.Primary}"/>
    </Style>

    <Style x:Key="Button.Secondary" TargetType="Button" BasedOn="{StaticResource Button.Base}">
        <Setter Property="Background" Value="{StaticResource Brush.Neutral.Surface}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Neutral.Text}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Neutral.Border.Strong}"/>
    </Style>

    <Style x:Key="Button.Ghost" TargetType="Button" BasedOn="{StaticResource Button.Base}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Neutral.Text.Muted}"/>
    </Style>

    <!-- ========================================================= -->
    <!-- TextBox / ComboBox (dark theme, accent focus)              -->
    <!-- ========================================================= -->
    <Style x:Key="Input.Base" TargetType="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource Font.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="{StaticResource Brush.Neutral.Surface}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Neutral.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Neutral.Text}"/>
        <Setter Property="CaretBrush" Value="{StaticResource Brush.Accent.Primary}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource Radius.MD}">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Root" Property="BorderBrush" Value="{StaticResource Brush.Accent.Primary}"/>
                            <Setter TargetName="Root" Property="BorderThickness" Value="2"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Root" Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ComboBox.Base" TargetType="ComboBox">
        <Setter Property="FontFamily" Value="{StaticResource Font.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body}"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Neutral.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource Brush.Neutral.Surface}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Neutral.Text}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource Radius.MD}"/>
                        <ToggleButton x:Name="ToggleButton"
                                      Grid.Column="2"
                                      Focusable="False"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      ClickMode="Press"
                                      Background="Transparent"
                                      BorderBrush="Transparent">
                            <Path Width="10" Height="6" Stretch="Uniform" Fill="{StaticResource Brush.Neutral.Text.Muted}"
                                  Data="M 0 0 L 10 0 L 5 6 Z"/>
                        </ToggleButton>
                        <ContentPresenter Margin="12,6,32,6"
                                          VerticalAlignment="Center"
                                          Content="{TemplateBinding SelectionBoxItem}"/>
                        <Popup x:Name="PART_Popup"
                               Placement="Bottom"
                               AllowsTransparency="True"
                               Focusable="False"
                               IsOpen="{TemplateBinding IsDropDownOpen}">
                            <Border Background="{StaticResource Brush.Neutral.Surface}"
                                    BorderBrush="{StaticResource Brush.Neutral.Border.Strong}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource Radius.MD}"
                                    Padding="4"
                                    Effect="{StaticResource Shadow.LG}">
                                <ScrollViewer>
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource Brush.Accent.Primary}"/>
                            <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Border" Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ========================================================= -->
    <!-- List Items / Hover / Selection (subtle dark theme)         -->
    <!-- ========================================================= -->
    <SolidColorBrush x:Key="Brush.List.Hover" Color="#FF1A1F1F"/>
    <SolidColorBrush x:Key="Brush.List.Selected" Color="#FF2A2F2F"/>

    <Style x:Key="ListBoxItem.Standard" TargetType="ListBoxItem">
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Neutral.Text}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource Radius.MD}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource Brush.List.Hover}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource Brush.List.Selected}"/>
                            <Setter TargetName="Root" Property="BorderBrush" Value="{StaticResource Brush.Accent.Primary}"/>
                            <Setter TargetName="Root" Property="BorderThickness" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Root" Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ========================================================= -->
    <!-- Cards / Panels (dark surface with subtle border)           -->
    <!-- ========================================================= -->
    <Style x:Key="Card.Surface" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.Neutral.Surface}"/>
        <Setter Property="CornerRadius" Value="{StaticResource Radius.LG}"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Neutral.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Effect" Value="{StaticResource Shadow.LG}"/>
    </Style>

    <!-- ========================================================= -->
    <!-- Dialog / Modal Shell                                       -->
    <!-- ========================================================= -->
    <Style x:Key="Dialog.Container" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource Brush.Neutral.Surface}"/>
    </Style>

    <Style x:Key="Dialog.Overlay" TargetType="Rectangle">
        <Setter Property="Fill" Value="{StaticResource Brush.Surface.Overlay}"/>
    </Style>

    <!-- ========================================================= -->
    <!-- Progress Pill (subtle dark, accent at 100%)                -->
    <!-- ========================================================= -->
    <Style x:Key="Progress.Pill" TargetType="Border">
        <Setter Property="Height" Value="26"/>
        <Setter Property="MinWidth" Value="64"/>
        <Setter Property="CornerRadius" Value="{StaticResource Radius.MD}"/>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Neutral.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource Brush.Surface.Pill}"/>
        <Setter Property="Child">
            <Setter.Value>
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="12"
                           FontWeight="Normal"
                           Foreground="{StaticResource Brush.Neutral.Text.Muted}"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding ProgressPercentage}" Value="100">
                <Setter Property="Background" Value="{StaticResource Brush.Success}"/>
                <Setter Property="BorderBrush" Value="{StaticResource Brush.Success}"/>
                <Setter Property="Child">
                    <Setter.Value>
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="12"
                                   FontWeight="Normal"
                                   Foreground="{StaticResource Brush.Neutral.Text.Strong}"/>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- ========================================================= -->
    <!-- Insertion Adorner / Drag Indicator                         -->
    <!-- ========================================================= -->
    <SolidColorBrush x:Key="Brush.DragIndicator" Color="{StaticResource Color.Accent.Primary}"/>
    <x:Double x:Key="DragIndicator.Thickness">2</x:Double>

</ResourceDictionary>
