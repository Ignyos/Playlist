<Window x:Class="Playlist.Views.UpdateCheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Check for Updates" 
        Height="250" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Name="HeaderText" 
                       Text="Checking for updates..." 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <!-- Loading State -->
            <StackPanel Name="LoadingPanel" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Visibility="Visible">
                <TextBlock Name="CurrentVersionText"
                          FontSize="14" 
                          Foreground="#666"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>
                <TextBlock Text="Checking for updates..." 
                          FontSize="14" 
                          Foreground="#666"
                          HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Result State -->
            <StackPanel Name="ResultPanel" 
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                <TextBlock Name="StatusMessage" 
                          FontSize="14" 
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          Margin="0,0,0,10"/>
                <TextBlock Name="VersionInfo" 
                          FontSize="12" 
                          Foreground="#666"
                          TextAlignment="Center"
                          Margin="0,0,0,10"/>
            </StackPanel>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Name="DownloadButton" 
                    Content="Download Update" 
                    Width="130" 
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#2563EB"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="DownloadButton_Click"
                    Visibility="Collapsed">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Name="CloseButton" 
                    Content="Close" 
                    Width="100" 
                    Height="35"
                    Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#E5E7EB" 
                                            CornerRadius="5"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
