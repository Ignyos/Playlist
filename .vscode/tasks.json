{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean-build",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "dotnet clean src/Playlist/Playlist.csproj; dotnet build src/Playlist/Playlist.csproj --configuration Debug"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run-release",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/release.ps1"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "problemMatcher": []
        }
    ]
}
