<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!--
      Ignyos Design System - Menu Component Styles
      Requires: Ignyos.Colors.xaml, Ignyos.Tokens.xaml
      
      Design: Pill-style menu items based on web ig-pill component
      - Default: subtle white transparent background with accent border
      - Hover: subtle orange tinted background, darker border, brighter orange text (0.2s transition)
      - Pressed: filled background with accent color
      - Submenu Open: same as hover state
    -->

    <!-- ========================================================= -->
    <!-- Menu Bar Style                                            -->
    <!-- ========================================================= -->
    <Style x:Key="Menu.Base" TargetType="Menu">
        <Setter Property="Background" Value="{DynamicResource Brush.Neutral.Surface}"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Neutral.Text}"/>
        <Setter Property="FontFamily" Value="{DynamicResource Font.Primary}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSize.Body}"/>
        <Setter Property="Padding" Value="8"/>
    </Style>

    <!-- ========================================================= -->
    <!-- Menu Item Style - Pill Style with Animated Transitions     -->
    <!-- ========================================================= -->
    <Style x:Key="MenuItem.Base" TargetType="MenuItem">
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="FontFamily" Value="{DynamicResource Font.Primary}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSize.Body}"/>
        <Setter Property="Padding" Value="12,6,12,6"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Border x:Name="border"
                            Background="#01FFFFFF"
                            BorderBrush="{DynamicResource Brush.Accent.Primary}"
                            BorderThickness="1"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="8">
                        <Grid>
                            <ContentPresenter ContentSource="Header"
                                            RecognizesAccessKey="True"
                                            TextElement.Foreground="{TemplateBinding Foreground}"/>
                            <Popup x:Name="PART_Popup"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   IsOpen="{TemplateBinding IsSubmenuOpen}"
                                   Placement="Bottom"
                                   PlacementTarget="{Binding ElementName=border}"
                                   PopupAnimation="Fade">
                                <Border Background="{DynamicResource Brush.Neutral.Surface}"
                                        BorderBrush="{DynamicResource Brush.Neutral.Border}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Effect="{DynamicResource Shadow.LG}"
                                        Padding="4">
                                    <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Cycle"
                                                    SnapsToDevicePixels="True"/>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover state: only when mouse is over and NOT pressed -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsPressed" Value="False"/>
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Animate background to pill hover color (rgba(255, 155, 107, 0.08)) -->
                                        <ColorAnimation Storyboard.TargetName="border" 
                                                       Storyboard.TargetProperty="Background.Color" 
                                                       To="#14FF9B6B" 
                                                       Duration="0:0:0.2"/>
                                        <!-- Animate border to darker gray -->
                                        <ColorAnimation Storyboard.TargetName="border" 
                                                       Storyboard.TargetProperty="BorderBrush.Color" 
                                                       To="#3A3A3A" 
                                                       Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Animate back to default subtle white -->
                                        <ColorAnimation Storyboard.TargetName="border" 
                                                       Storyboard.TargetProperty="Background.Color" 
                                                       To="#01FFFFFF" 
                                                       Duration="0:0:0.2"/>
                                        <!-- Animate border back to accent -->
                                        <ColorAnimation Storyboard.TargetName="border" 
                                                       Storyboard.TargetProperty="BorderBrush.Color" 
                                                       To="#C18B5A" 
                                                       Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.ExitActions>
                            <Setter Property="Foreground" Value="#FF9B6B"/>
                        </MultiTrigger>
                        
                        <!-- Pressed state: maintains hover appearance while pressed -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#14FF9B6B"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#3A3A3A"/>
                            <Setter Property="Foreground" Value="#FF9B6B"/>
                        </Trigger>
                        
                        <!-- Submenu open state: same as hover -->
                        <Trigger Property="IsSubmenuOpen" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="border" 
                                                       Storyboard.TargetProperty="Background.Color" 
                                                       To="#14FF9B6B" 
                                                       Duration="0:0:0.2"/>
                                        <ColorAnimation Storyboard.TargetName="border" 
                                                       Storyboard.TargetProperty="BorderBrush.Color" 
                                                       To="#3A3A3A" 
                                                       Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Setter Property="Foreground" Value="#FF9B6B"/>
                        </Trigger>
                        
                        <!-- Disabled state -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{DynamicResource Brush.Neutral.Text.Muted}"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource Brush.Neutral.Text.Muted}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
