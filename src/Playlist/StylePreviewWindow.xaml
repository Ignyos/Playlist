<Window x:Class="Playlist.StylePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ignyos Style Guide Preview" 
        Width="800" Height="600"
        Background="#FF0A0A0A"
        Foreground="#FFE0E0E0"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary Source="Styles/StyleGuide.Proposed.xaml"/>
    </Window.Resources>
    
    <ScrollViewer>
        <StackPanel Margin="32">
            <TextBlock Text="Ignyos Style Guide Preview"
                       FontSize="30"
                       Foreground="#FFE0E0E0"
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="✓ StyleGuide.Proposed.xaml loaded successfully!" 
                       FontSize="16"
                       Foreground="#FF22C55E"
                       Margin="0,0,0,40"/>
            
            <TextBlock Text="Colors Available:" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="• Accent Primary (#C18B5A)" FontSize="13" Margin="0,0,0,5" Foreground="#FFC18B5A"/>
            <TextBlock Text="• Accent Strong (#FF9B6B)" FontSize="13" Margin="0,0,0,5" Foreground="#FFFF9B6B"/>
            <TextBlock Text="• Success (#22C55E)" FontSize="13" Margin="0,0,0,5" Foreground="#FF22C55E"/>
            <TextBlock Text="• Warning (#F59E0B)" FontSize="13" Margin="0,0,0,5" Foreground="#FFF59E0B"/>
            <TextBlock Text="• Danger (#EF4444)" FontSize="13" Margin="0,0,0,20" Foreground="#FFEF4444"/>
            
            <TextBlock Text="Typography Styles Available:" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="• Text.Display (30pt)" FontSize="13" Margin="0,0,0,5"/>
            <TextBlock Text="• Text.Heading (18pt)" FontSize="13" Margin="0,0,0,5"/>
            <TextBlock Text="• Text.SubHeading (14pt)" FontSize="13" Margin="0,0,0,5"/>
            <TextBlock Text="• Text.Body (13pt)" FontSize="13" Margin="0,0,0,5"/>
            <TextBlock Text="• Text.Body.Small (12pt)" FontSize="13" Margin="0,0,0,20"/>
            
            <TextBlock Text="Component Styles Available:" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="• Button.Primary, Button.Secondary, Button.Ghost" FontSize="13" Margin="0,0,0,5"/>
            <TextBlock Text="• TextBox.Base, ComboBox.Base" FontSize="13" Margin="0,0,0,5"/>
            <TextBlock Text="• ListBoxItem.Standard" FontSize="13" Margin="0,0,0,5"/>
            <TextBlock Text="• Card.Surface, Dialog.Container" FontSize="13" Margin="0,0,0,5"/>
            <TextBlock Text="• Progress.Pill" FontSize="13" Margin="0,0,0,20"/>
            
            <TextBlock Text="All design tokens from styles.ignyos.com are now available for use."
                       FontSize="13"
                       Foreground="#FF808080"
                       Margin="0,0,0,20"
                       TextWrapping="Wrap"/>
            
            <!-- Menu Sample -->
            <TextBlock Text="Menu Sample:" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
            <Menu Background="#FF0F0F0F" Foreground="#FFE0E0E0" Margin="0,0,0,20">
                <MenuItem Header="File" Foreground="#FFE0E0E0">
                    <MenuItem Header="New" Foreground="#FFE0E0E0"/>
                    <MenuItem Header="Open" Foreground="#FFE0E0E0"/>
                    <Separator/>
                    <MenuItem Header="Exit" Foreground="#FFE0E0E0"/>
                </MenuItem>
                <MenuItem Header="Edit" Foreground="#FFE0E0E0">
                    <MenuItem Header="Copy" Foreground="#FFE0E0E0"/>
                    <MenuItem Header="Paste" Foreground="#FFE0E0E0"/>
                </MenuItem>
            </Menu>
            
            <TextBlock Text="✓ Menu elements render with dark theme colors"
                       FontSize="12"
                       Foreground="#FF808080"/>
        </StackPanel>
    </ScrollViewer>
</Window>
