{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean-build",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "dotnet clean src/Playlist/Playlist.csproj; dotnet build src/Playlist/Playlist.csproj --configuration Debug"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}
