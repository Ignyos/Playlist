<Window x:Class="Playlist.Views.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Playback History" Height="500" Width="800" MinHeight="400" MinWidth="600"
        Icon="/Assets/icon.ico"
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <!-- Close Button -->
        <Button DockPanel.Dock="Bottom" Content="Close" Width="80" Height="30" 
                Margin="0,10,0,0" HorizontalAlignment="Right" Click="Close_Click" />

        <!-- History List -->
        <DataGrid Name="HistoryDataGrid" AutoGenerateColumns="False" 
                  IsReadOnly="True" GridLinesVisibility="Horizontal"
                  AlternatingRowBackground="#F5F5F5" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date and Time" Binding="{Binding TimeStamp, StringFormat='yyyy-MM-dd HH:mm:ss'}" Width="150" />
                <DataGridTextColumn Header="Playlist" Binding="{Binding PlaylistName}" Width="*" MinWidth="150" />
                <DataGridTextColumn Header="Item" Binding="{Binding ItemName}" Width="*" MinWidth="200" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
