<Window x:Class="Playlist.Views.MediaPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="Media Player" Height="600" Width="800"
        Icon="/Assets/icon.ico"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <Style x:Key="MediaControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Name="MainGrid" Background="Black">
        <!-- Video View with controls as content -->
        <vlc:VideoView x:Name="VideoView">
            <!-- Full-screen transparent grid to capture mouse events -->
            <Grid Background="#01000000" MouseMove="Window_MouseMove">
                <Border Name="ControlsOverlay" 
                        VerticalAlignment="Bottom" 
                        Background="#CC000000" 
                        Padding="15"
                        Visibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Progress Bar (Top of overlay) -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Name="CurrentTimeText" 
                               Text="00:00" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               FontSize="12"
                               Margin="0,0,10,0"/>

                    <Slider Grid.Column="1" Name="ProgressSlider" 
                            Minimum="0" Maximum="100" 
                            VerticalAlignment="Center"
                            Thumb.DragStarted="ProgressSlider_DragStarted"
                            Thumb.DragCompleted="ProgressSlider_DragCompleted"
                            ValueChanged="ProgressSlider_ValueChanged"/>

                    <TextBlock Grid.Column="2" Name="DurationText" 
                               Text="00:00" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               FontSize="12"
                               Margin="10,0,0,0"/>
                </Grid>

                <!-- Playback Controls (Bottom of overlay) -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Playback buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Name="PlayPauseButton" Width="40" Height="40" Margin="0,0,5,0" 
                                Click="PlayPause_Click" ToolTip="Play/Pause"
                                Style="{StaticResource MediaControlButtonStyle}">
                            <TextBlock Name="PlayPauseIcon" Text="â–¶" FontSize="18" Foreground="White"/>
                        </Button>
                        <Button Name="StopButton" Width="40" Height="40" Margin="0,0,5,0" 
                                Click="Stop_Click" ToolTip="Stop"
                                Style="{StaticResource MediaControlButtonStyle}">
                            <TextBlock Text="â– " FontSize="16" Foreground="White"/>
                        </Button>
                    </StackPanel>

                    <!-- Center: Now Playing -->
                    <TextBlock Grid.Column="1" Name="NowPlayingText" 
                               Text="No media playing" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="13"
                               FontWeight="SemiBold"/>

                    <!-- Right: Volume and Full Screen -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="ðŸ”Š" FontSize="14" Foreground="White" 
                                   VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <Slider Name="VolumeSlider" 
                                Width="80" 
                                Minimum="0" Maximum="100" 
                                Value="50"
                                VerticalAlignment="Center"
                                ValueChanged="VolumeSlider_ValueChanged"
                                Margin="0,0,10,0"/>
                        <Button Name="FullScreenButton" Width="40" Height="40" 
                                Click="FullScreen_Click" ToolTip="Full Screen (F11)"
                                Style="{StaticResource MediaControlButtonStyle}">
                            <TextBlock Name="FullScreenIcon" Text="â›¶" FontSize="16" Foreground="White"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
            </Grid>
        </vlc:VideoView>
    </Grid>
</Window>
