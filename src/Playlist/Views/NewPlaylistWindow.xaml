<Window x:Class="Playlist.Views.NewPlaylistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="New Playlist" Height="500" Width="600" MinHeight="400" MinWidth="500"
        Icon="/Assets/icon.ico"
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <!-- Name Input -->
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,15">
            <Label Content="Playlist Name:" FontWeight="SemiBold" />
            <TextBox Name="PlaylistNameTextBox" Height="30" VerticalContentAlignment="Center" 
                     Text="New Playlist" FontSize="14" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Name="CancelButton" Content="Cancel" Width="80" Height="30" 
                    Margin="0,0,10,0" Click="Cancel_Click" />
            <Button Name="SaveButton" Content="Save" Width="80" Height="30" 
                    IsDefault="True" Click="Save_Click" />
        </StackPanel>

        <!-- File Selection Area -->
        <DockPanel>
            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                <Label Content="Files:" FontWeight="SemiBold" DockPanel.Dock="Left" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="AddFilesButton" Content="Add Files..." Width="100" Height="30" 
                            Margin="0,0,5,0" Click="AddFiles_Click" />
                    <Button Name="AddFolderButton" Content="Add Folder..." Width="100" Height="30" 
                            Click="AddFolder_Click" />
                </StackPanel>
            </DockPanel>

            <!-- Files List -->
            <Border BorderBrush="#DDD" BorderThickness="1" Background="White">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Padding="10" Background="#F5F5F5"
                               Text="Selected Files (right-click to remove)" 
                               FontStyle="Italic" Foreground="#666" />
                    <ListBox Name="FilesListBox" SelectionMode="Extended">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Remove Selected" Click="RemoveFiles_Click" />
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>
                </DockPanel>
            </Border>
        </DockPanel>
    </DockPanel>
</Window>
